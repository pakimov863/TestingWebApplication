@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<TestingWebApplication.Data.Database.Model.UserDto>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.SiteName = "TestingWebApplication";
    ViewBag.Title = "Доступные пользователи";
}

<a asp-controller="AdminUsers" asp-action="CreateUser">Создать пользователя</a>

@foreach (var user in Model)
{
    <div>
        <div>ID : @user.Id</div>
        <div>@user.Name</div>
        <div>
            <a asp-controller="AdminUsers" asp-action="EditUser" asp-route-roleId="@user.Id">Редактировать</a>
            <a asp-controller="AdminUsers" asp-action="DeleteUser" asp-route-roleId="@user.Id">Удалить</a>
        </div>
    </div>
}