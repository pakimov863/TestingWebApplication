@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.SiteName = "TestingWebApplication";
    ViewBag.Title = "Управление пользователями";
}

<div class="col">
    <div class="row d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">@ViewBag.Title</h1>
    </div>
    <div class="row">
        <div class="card col-12 mb-3">
            <div class="card-body">
                <h5 class="card-title">Добавьте пользователей</h5>
                <p class="card-text">Вы можете добавлять любых пользователей в систему. Для этого заполните все поля на соответствующей странице.</p>
                <a asp-controller="AdminUsers" asp-action="CreateUser" class="card-link">Перейти</a>
            </div>
        </div>
        <div class="card col-12 mb-3">
            <div class="card-body">
                <h5 class="card-title">Просматривайте список пользователей</h5>
                <p class="card-text">Текст-подсказка.</p>
                <a asp-controller="AdminUsers" asp-action="ShowList" class="card-link">Перейти</a>
            </div>
        </div>
        <div class="card col-12 mb-3">
            <div class="card-body">
                <h5 class="card-title">Редактируйте пользователей</h5>
                <p class="card-text">Текст-подсказка.</p>
            </div>
        </div>
    </div>
</div>