@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model TestingWebApplication.Models.AdminQuizResults.ShowResultsViewModel

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.SiteName = "TestingWebApplication";
    ViewBag.Title = "Доступные результаты теста";
}

<div>
    <div>ID : @Model.SourceQuizId</div>
    <div>Название: @Model.SourceQuizTitle</div>
    <div>Создал тест: @Model.CreatorUserName</div>
    <div>
        <a asp-controller="AdminQuizResults" asp-action="ShowList">Назад</a>
    </div>
</div>
<br/>

@foreach (var answerInfo in Model.Answers)
{
    <div>
        <div>ID : @answerInfo.GeneratedQuizId</div>
        <div>Тег: @answerInfo.Tag</div>
        <div>Прошедший: @answerInfo.RespondentUserName</div>
        <div>Время начала: @answerInfo.StartTime</div>
        <div>
            <a asp-controller="AdminQuizResults" asp-action="ShowSessionResult" asp-route-sessionId="@answerInfo.GeneratedQuizId">Просмотр</a>
        </div>
    </div>
}