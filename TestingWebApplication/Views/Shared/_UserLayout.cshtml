@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">

    <title>@ViewBag.Title</title>

    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/dashboard.css" rel="stylesheet">

    @if (IsSectionDefined("HeaderStyles"))
    {
        @RenderSectionAsync("HeaderStyles", false).GetAwaiter().GetResult()
    }

    @if (IsSectionDefined("HeaderScripts"))
    {
        @RenderSectionAsync("HeaderScripts", false).GetAwaiter().GetResult()
    }
</head>
<body>
    <nav class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-0 shadow">
        @if (User.IsInRole("Admin"))
        {
            <a asp-controller="AdminQuizzes" asp-action="ShowList" class="navbar-brand col-md-3 col-lg-2 mr-0 px-3">@ViewBag.SiteName</a>
        }
        else
        {
            <span class="navbar-brand col-md-3 col-lg-2 mr-0 px-3">@ViewBag.SiteName</span>
        }
        <ul class="navbar-nav px-3">
            <li class="nav-item text-nowrap">
                <a class="nav-link" asp-controller="Account" asp-action="Logout">Выйти</a>
            </li>
        </ul>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <main role="main" class="col-md ml-sm-auto col-lg px-md-4">
                @RenderBody()
            </main>
        </div>
    </div>
    
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/feather.min.js"></script>
    <script>feather.replace();</script>

    @if (IsSectionDefined("FooterScripts"))
    {
        @RenderSectionAsync("FooterScripts", false).GetAwaiter().GetResult()
    }

</body>
</html>
