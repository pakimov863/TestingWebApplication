@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.SiteName = "TestingWebApplication";
    ViewBag.Title = "Доступные роли";
}

<a asp-controller="AdminRoles" asp-action="CreateRole">Создать роль</a>

@foreach (var role in Model)
{
    <div>
        <div>ID : @role.Id</div>
        <div>@role.Name</div>
        <div>
            <a asp-controller="AdminRoles" asp-action="EditRole" asp-route-roleId="@role.Id">Редактировать</a>
            <a asp-controller="AdminRoles" asp-action="DeleteRole" asp-route-roleId="@role.Id">Удалить</a>
        </div>
    </div>
}