@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model TestingWebApplication.Models.AdminRoles.EditRoleViewModel

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.SiteName = "TestingWebApplication";
    ViewBag.Title = "Редактирование роли";
}

<form method="post">
    <div asp-validation-summary="All"></div>
    <div>
        <label asp-for="RoleId"></label>
        <div>
            <input type="hidden" asp-for="RoleId" />
            <input asp-for="RoleId" disabled />
        </div>
    </div>
    <div>
        <label asp-for="RoleName"></label>
        <div>
            <input asp-for="RoleName" />
            <span asp-validation-for="RoleName"></span>
        </div>
    </div>

    <div>
        @for (var i = 0; i < Model.UsersInRole.Count; i++)
        {
            <div>
                <input type="hidden" asp-for="@Model.UsersInRole[i].UserId" />
                <input type="hidden" asp-for="@Model.UsersInRole[i].UserName" />

                <label asp-for="@Model.UsersInRole[i].IsSelected">@Model.UsersInRole[i].UserName</label>
                <input asp-for="@Model.UsersInRole[i].IsSelected" />
            </div>
        }
    </div>

    <input type="submit" value="Обновить" />
    <a asp-controller="AdminRoles" asp-action="ShowList">Отмена</a>
</form>